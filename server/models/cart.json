{
  "name": "cart",
  "plural": "cart",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "strictObjectIDCoercion": true
  },
  "mixins": {
    "DisableAllRemoteMethods": {
      "active": true
    }
  },
  "properties": {},
  "validations": [],
  "relations": {
    "cart-items": {
      "type": "hasMany",
      "model": "cart-item",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "cartDetails"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "addItems"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "removeItem"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {
    "cartDetails": {
      "accepts": [
        {
          "arg": "access_token",
          "type": "string",
          "http": {
            "source": "query"
          }
        }
      ],
      "returns": {
        "root": true,
        "description": "return cart information"
      },
      "description": "Fetches details about a cart for a user",
      "http": {
        "path": "/cart-details",
        "verb": "get"
      }
    },
    "addItems": {
      "accepts": [
        {
          "arg": "access_token",
          "type": "string",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "cart-items",
          "type": "array"
        }
      ],
      "returns": {
        "root": true,
        "description": ""
      },
      "description": "Add multiple cart-items to a given cart",
      "http": {
        "path": "/add-items",
        "verb": "post"
      }
    },
    "removeItem": {
      "accepts": [
        {
          "arg": "access_token",
          "type": "string",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "cartItemId",
          "type": "string"
        }
      ],
      "returns": {
        "root": true,
        "description": ""
      },
      "description": "removes a given cart item from a cart",
      "http": {
        "path": "/remove-item",
        "verb": "post"
      }
    }
  }
}